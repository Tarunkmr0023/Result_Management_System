<div class="col-sm-4 mx-auto " style="margin-top:4%">
    <a href="/" class="btn btn-danger" style="margin-left:45%;">Back</a>
    <div class="card rounded-2 shadow-lg border border-dark rounded-2">
        <div class="card-body">
            <h2 class="card-title d-flex justify-content-center" style="margin-left:0px;">Student Login</h2>
            <form action="../student/result" method="post">
                <div class="mb-3">
                    <label for="StudentName" class="form-label">Name</label>
                    <input type="text" class="form-control" minlength="3" name="StudentName" id="StudentName" placeholder="Enter your name" required>
                </div>
                <div class="mb-3">
                    <label for="StudentRollNo" class="form-label">Roll No.</label>
                    <input type="number" class="form-control"  name="StudentRollNo" id="StudentRollNo" placeholder="Enter your roll no." required>
                </div>
                <button type="submit" class="btn btn-success" style="margin-left: 25%;">Submit</button>
                <button type="reset"  class="btn btn-danger">Reset</button>
            </form>
        </div>
    </div>

</div>